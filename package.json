{
  "name": "monorepo",
  "version": "0.1.0",
  "description": "monorepo de front y back js",
  "main": "index.js",
  "scripts": {
    "test": "lerna run test",
    "test:since": "lerna run test --since",
    "test:frontend": "lerna run test --scope=@fullstack/frontend",
    "test:backend": "lerna run test --scope=@fullstack/backend",
    "test:both": "lerna run test --scope={@fullstack/frontend,@fullstack/backend}",
    "client": "yarn workspace @fullstack/frontend serve",
    "server": "yarn workspace @fullstack/backend start",
    "start": "concurrently --kill-others-on-fail \"yarn server\"  \"yarn client\"",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff",
    "commit": "yarn git-cz",
    "first-commit": "commitizen init cz-conventional-changelog --yarn --dev --exact"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krbaio3/monorepo.git"
  },
  "keywords": [
    "vuejs",
    "adonisjs"
  ],
  "author": "krbaio3",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krbaio3/monorepo/issues"
  },
  "homepage": "https://github.com/krbaio3/monorepo#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "concurrently": "^4.1.2",
    "lint-staged": "^9.3.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "lerna": "^3.16.4"
  }
}
